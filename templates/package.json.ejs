{
  "name": "@answerbook/<%= slug %>",
  "description": "<%= description %>",
  "version": "0.0.0",
  "main": "index.js",
  "files": [
    "lib/**/*",
    "index.js",
    "README.md",
    "LICENSE"
  ],
  "release": {
    "extends": "@answerbook/release-config-npm",
    "branches": ["main"]
  },
  "scripts": {
    "tap": "tap",
    "lint": "eslint ./",
    "lint:fix": "npm run lint -- --fix",
    "test": "tap",
    "test:ci": "tools/test-ci.sh",
    "pretest": "npm run lint",
    "pretest:ci": "npm run lint",
    "release": "semantic-release"
  },
  "author": "<%= author_name %> <<%= author_email %>>",
  "repository":{
    "type": "git",
    "url": "git+ssh://github.com/answerbook/<%= slug %>.git"
  },
  "homepage": "https://github.com/answerbook/<%= slug %>",
  "bugs": {
    "url": "https://github.com/answerbook/<%= slug %>/issues"
  },
  "license": "SEE LICENSE IN LICENSE",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "eslintConfig": {
    "root": true,
    "ignorePatterns": ["node_modules/", "coverage/"],
    "extends": "logdna",
    "parserOptions": {
      "ecmaVersion": 2019
    }
  }
}
